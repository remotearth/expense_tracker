<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.remotearthsolutions.expensetracker.fragments.currenypicker.CurrencyPickerPreference
        android:defaultValue="@string/default_currency"
        android:icon="@drawable/settings_currency"
        android:key="@string/preferencekey"
        android:summary="@string/summarypreftext"
        android:title="@string/preferencetitle" />

    <androidx.preference.ListPreference
        android:defaultValue="@string/daily"
        android:entries="@array/TimePeriod"
        android:entryValues="@array/TimePeriod"
        android:icon="@drawable/settings_timeperiod"
        android:key="@string/prefdate"
        android:summary="@string/selectperiodfromhere"
        android:title="@string/timeperiod" />

    <androidx.preference.ListPreference
        android:defaultValue="@string/default_time_format"
        android:entries="@array/TimeFormat"
        android:entryValues="@array/TimeFormat"
        android:icon="@drawable/ic_change_date_formate"
        android:key="@string/preftimeformat"
        android:summary="@string/select_time_format_from_here"
        android:title="@string/prefTimeFormatTitle" />

    <androidx.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_daily_reminder"
        android:key="@string/prefremindaddexpense"
        android:summary="@string/daily_at_endofday"
        android:title="@string/remind_to_addexpense" />

    <androidx.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_reminder"
        android:key="@string/prefremindtoexport"
        android:summary="@string/first_day_of_month"
        android:title="@string/remind_to_export" />

    <androidx.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:icon="@drawable/ic_reminder"
        android:key="pref_dark_mode"
        android:title="@string/dark_mode" />

</PreferenceScreen>