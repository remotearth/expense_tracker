<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".MainActivity">



        <ImageView
                android:layout_width="@dimen/logo_height_weight"
                android:layout_height="@dimen/logo_height_weight"
                android:src="@drawable/templogo"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/welcometitle"
                  android:textColor="@color/colorPrimary"
                  android:gravity="center"
                  android:textAllCaps="false"
                  android:textSize="20sp"
                  android:layout_marginTop="20dp"/>


        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:text="@string/termpolicytext"
                  android:textColor="@color/Ashcolor"
                    />

        <Button android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:text="@string/fb_signin_text"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:textColor="@color/textcolorwhite"
                  android:background="@drawable/btn_background"
                  android:drawableLeft="@drawable/ic_facebook"
                  android:paddingLeft="10dp"
                  android:layout_marginTop="10dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/gmail_signin_text"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/textcolorwhite"
                android:drawableLeft="@drawable/ic_gmail"
                android:background="@drawable/btn_background"
                android:textSize="15sp"/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/noaccounttext"
              android:textColor="@color/Ashcolor"
              android:gravity="center"
              android:textAllCaps="false"
              android:textSize="15sp"
              android:layout_marginTop="20dp"/>

    <Button android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/signup_button_text"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/textcolorwhite"
            android:background="@drawable/btn_background"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

