<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".MainActivity">



        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/templogo"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Welcome To Expense Tracker"
                  android:textColor="@color/colorPrimary"
                  android:gravity="center"
                  android:textAllCaps="false"
                  android:textSize="20sp"
                  android:layout_marginTop="20dp"/>


        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:text="Accept Terms of Service &amp; Privacy Policy"
                  android:textColor="#848484"
                    />

        <Button android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:text="SIGN IN WITH FACEBOOK"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:textColor="#FFFFFF"
                  android:background="@drawable/btn_background"
                  android:drawableLeft="@drawable/ic_facebook"
                  android:paddingLeft="10dp"
                  android:layout_marginTop="10dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SIGN IN WITH GMAIL"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/ic_gmail"
                android:background="@drawable/btn_background"
                android:textSize="15sp"/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Don't Have Any Acoount?"
              android:textColor="#848484"
              android:gravity="center"
              android:textAllCaps="false"
              android:textSize="15sp"
              android:layout_marginTop="20dp"/>

    <Button android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="SIGN UP HERE"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_background"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

