<?xml version="1.0" encoding="utf-8"?>
<com.wunderlist.slidinglayer.SlidingLayer
        xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slidingDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        slidingLayer:stickTo="bottom"
        android:layout_gravity="bottom"
        slidingLayer:changeStateOnTap="true">

    <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

        <LinearLayout
                android:weightSum="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

            <LinearLayout
                    android:id="@+id/fromaccountselection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/accountImageIv"
                        android:layout_width="50dp"
                        android:layout_gravity="end"
                        android:padding="5dp"
                        android:src="@drawable/ic_food"
                        android:layout_height="50dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/from_account"
                        android:textSize="18sp"
                        android:background="@color/colorAccent"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>

                <TextView
                        android:id="@+id/accountNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/from_account_card"
                        android:textSize="25sp"
                        android:background="@color/colorAccent"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/categorylayout"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/showcatimage"
                        android:layout_width="50dp"
                        android:layout_gravity="end"
                        android:padding="5dp"
                        android:layout_height="50dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/to_account"
                        android:textSize="18sp"
                        android:background="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>


                <TextView
                        android:id="@+id/showcatname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:background="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/expense"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/inputdigit"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:hint="@string/takahints"
                    android:textColorHint="@color/colorPrimary"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:hint="@string/notes"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/selectdata"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_calendar"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_currency"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_backspace"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_check"
                    android:layout_height="match_parent"/>


        </LinearLayout>

        <fragment
                android:id="@+id/numpadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.remotearthsolutions.expensetracker.fragments.NumpadFragment">
        </fragment>

        <TextView
                android:id="@+id/ShowDate"
                android:text="@string/today_14th_january_2019"
                android:gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="0dp"/>
    </LinearLayout>
</com.wunderlist.slidinglayer.SlidingLayer>







