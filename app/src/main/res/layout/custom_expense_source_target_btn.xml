<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/accountTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/accountNameTv"
        android:background="@drawable/bg_top_corner"
        android:backgroundTint="@color/colorAccent"
        android:padding="2dp"
        android:text="@string/from_account"
        android:textColor="@color/white"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/accountNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountImageIv"
        android:background="@drawable/bg_bottom_corner"
        android:backgroundTint="@color/colorAccent"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:text="@string/from_account_card"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/accountImageIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        app:srcCompat="@drawable/cat_food" />
</merge>
